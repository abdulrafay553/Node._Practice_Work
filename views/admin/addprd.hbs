<h1>ADD PRODUCT</h1>
<hr />

{{#if prdData.productname}}
  <form method="post" action="/admin/editprd" enctype="multipart/form-data">
  <div class="mb-3">
      <label for="formGroupExampleInput" class="form-label">Product ID</label>
      <input
        type="hidden"
        class="form-control"
        id="formGroupExampleInput"
        placeholder="Enter Product ID"
        name="_id"
        value="{{prdData._id}}"
        readonly
      />
    </div>
{{else}}
  <form method="post" action="/admin/saveprd" enctype="multipart/form-data">
{{/if}}

    <div class="mb-3">
      <label for="formGroupExampleInput" class="form-label">Product Name</label>
      <input
        type="text"
        class="form-control"
        id="formGroupExampleInput"
        placeholder="Enter Product Name"
        name="productname"
        value="{{prdData.productname}}"
      />
    </div>
    <div class="mb-3">
      <label for="formGroupExampleInput2" class="form-label">Product Price</label>
      <input
        type="number"
        class="form-control"
        id="formGroupExampleInput2"
        placeholder="Enter Product Price"
        name="productprice"
        value="{{prdData.productprice}}"
      />
    </div>
    <div class="mb-3">
      <label for="formGroupExampleInput2" class="form-label">Product Image</label>
      <input
        type="file"
        class="form-control"
        id="formGroupExampleInput2"
        name="productimage"
        value="{{prdData.productimage}}"
      />
    </div>
    <div class="mb-3">
      <div class="col-12">
        <button type="submit" class="btn btn-primary">SAVE PRODUCT</button>
      </div>
    </div>
  </form>
</form>